{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schema/log.schema.json",
  "title": "Study Log",
  "type": "object",
  "additionalProperties": false,
  "required": ["date", "study", "toshin"],
  "properties": {
    "date": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "notes": {
      "type": "string"
    },
    "study": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["subject", "focus", "detail"],
        "properties": {
          "subject": { "type": "string", "minLength": 1 },
          "focus": { "type": "string", "minLength": 1 },
          "detail": { "type": "string", "minLength": 1 },
          "tags": {
            "type": "array",
            "items": { "type": "string", "minLength": 1 }
          }
        }
      }
    },
    "toshin": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["subject", "course", "koma"],
        "properties": {
          "subject": { "type": "string", "minLength": 1 },
          "course": { "type": "string", "minLength": 1 },
          "koma": { "type": "integer", "minimum": 1 },
          "memo": { "type": "string" }
        }
      }
    }
  }
}
